<mujoco model="inverted_pendulum">
    <compiler angle="radian" coordinate="local" />

    <option gravity="0 0 -9.8" />

    <size njmax="100" nconmax="100"/>

    <default>
        <joint damping="1" limited="false"/>
        <geom friction="0.8 0.1 0.1" density="1000" margin="0.002" condim="1" contype="1" conaffinity="1"/>
    </default>

    <worldbody>
        <!-- Ground plane -->
        <geom name="ground" type="plane" size="5 5 0.1" rgba="0.9 0.9 0.9 1"/>

        <!-- Cart -->
        <body name="cart" pos="0 0 0.1">
            <joint name="slide_x" type="slide" axis="1 0 0" />
            <geom name="cart_geom" type="box" size="0.2 0.1 0.05" rgba="0 0 1 1"/>

            <!-- Pendulum attached to the cart -->
            <body name="pendulum" pos="0 0 0.05">
                <joint name="hinge" type="hinge" axis="0 1 0" pos="0 0 0.05"/>
                <geom name="pendulum_geom" type="capsule" fromto="0 0 0 0 0 0.6" size="0.02" rgba="1 0 0 1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Actuator to move the cart -->
        <motor name="cart_motor" joint="slide_x" gear="100"/>
    </actuator>
</mujoco>
